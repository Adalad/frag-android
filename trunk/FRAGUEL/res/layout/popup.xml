<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:id="@+id/popupPI" android:layout_width="fill_parent"
	android:layout_height="wrap_content" xmlns:android="http://schemas.android.com/apk/res/android">

	<LinearLayout android:id="@+id/popupPI_container"
		android:orientation="horizontal" android:layout_width="wrap_content"
		android:layout_height="wrap_content">


		<FrameLayout android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:background="@drawable/popup_leftpointer1"
			android:paddingLeft="2dip" android:paddingTop="2dip">

			<ImageView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:id="@+id/popupPI_imagen2"
				android:paddingLeft="10dip" android:paddingTop="7dip" />

		</FrameLayout>


		<FrameLayout android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:background="@drawable/popup_middlebg1">

			<TextView android:id="@+id/popupPI_texto1"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:gravity="center" android:paddingTop="7dip" />

		</FrameLayout>


		<ImageView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:id="@+id/popupPI_imagen3"
			android:src="@drawable/popup_right1" />



	</LinearLayout>

</FrameLayout>
