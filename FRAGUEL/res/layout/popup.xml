<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:id="@+id/popupPI" android:layout_width="fill_parent"
	android:layout_height="wrap_content" xmlns:android="http://schemas.android.com/apk/res/android">

	<LinearLayout android:orientation="vertical"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:background="@drawable/popup_complete">

		<TextView android:id="@+id/popupPI_texto1"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:textStyle="bold"
			
			android:gravity="left" android:paddingTop="2dip" />


		<LinearLayout android:id="@+id/popupPI_container"
			android:orientation="horizontal" android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			
			>



			<FrameLayout android:layout_width="wrap_content"
				android:layout_height="wrap_content">

				<ImageView android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:id="@+id/popupPI_imagen2"
					android:paddingLeft="5dip" android:paddingTop="5dip" />

			</FrameLayout>


			<LinearLayout android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:orientation="horizontal"
				>

					<Button android:id="@+id/btn_popupPI_info" android:layout_width="wrap_content"
						android:background="@drawable/info" android:layout_height="wrap_content"
						android:paddingLeft="5dip" android:paddingTop="5dip" 
						android:gravity="center"
						/>

					<Button android:id="@+id/btn_popupPI_photo" android:layout_width="wrap_content"
						android:layout_height="wrap_content" android:background="@drawable/photo"
						android:paddingLeft="15dip" android:paddingTop="5dip" 
						
						/>

					<Button android:id="@+id/btn_popupPI_video" android:layout_width="wrap_content"
						android:layout_height="wrap_content" android:background="@drawable/video"
						android:paddingLeft="15dip" android:paddingTop="5dip" 
						
						/>
			
					<Button android:id="@+id/btn_popupPI_ar" android:layout_width="wrap_content"
						android:layout_height="wrap_content" android:background="@drawable/ar"
						android:paddingLeft="15dip" android:paddingTop="5dip" 
						
						/>

			</LinearLayout>





		</LinearLayout>


	</LinearLayout>

</FrameLayout>
